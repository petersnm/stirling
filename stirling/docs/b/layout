stirling # 's __init__ should have aliases to the global functions, clone(), remember(), etc.
    .cmd
        .__init__
            .find_cmd(name, paths)
                # Search for the command name in the array paths
        .dev # Are you a developer?
            .test
        .living # Can has animation?
            .observe
                .do_observe()
                    # Render the living's environment's description
            .go
                .do_go()
                    # Move the living
        .sapient # Requires the caller to have intelligence, basically
            .say
                do_say()
                    # Broadcast a message to the room
        .std # OOC commands, don't need to ahve a body to be used
            .help
                # Search [buncha shit] for helpful info
            .tell
                # Send a message to another player
            .alias
                # Handle aliases
    .daemon # Objects that have one instance, and are kept running
        .__init__
            from stirling.daemon.server.mud import MUDServer
            from stirling.daemon.database.properties import Properties()
        .server # Let the proles in
            .mud
                # raw text server
                class MUDServer(Daemon)
            .http # Totally unnecessary for now, but we know we'll ahve it
                # web server
                class HTTPServer(Daemon)
        .database # save things
            .mongo
                # create the Database connection
            .properties
                # Properties idct
                class Properties()
            .logging
                # Logging dict
        .object
            # Handles the cloning of new objects
            .remember(id)
                # Recreates object instance id
            .clone(path)
                # Creates a new instance and returns the id
            .get(id)
                # Returns object instance id   
    .docs
        # documentation
        .concepts # gameplay concepts
        .dev # How to dev
    .obj
        # Every object in the MUD
        .__init__
            from stirling.obj.object import MasterObject
            from stirling.obj.living.living import Living
            from stirling.obj.living.sapient import Sapient
        .living
            # Things that move on their own
            .living
                # The file for living things
                class Living(MasterObject)
                .sapient
                    # Things that can do complex things (speak, hold citizenship, etc.)
                    class Sapient(Living)
        .room
            # base inheritance for all rooms
        .object
            # MasterObject
            class MasterObject()
            class Inventory()
        .spec
            # Speeecial things
            .player
                # Handle inputs from terminal
                class Player(Sapient)
            .daemon
                # Inheritable for stirling.daemon
                class Daemon(MasterObject)
